<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/abc_button_padding_horizontal_material"
        android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
        android:paddingRight="@dimen/abc_button_padding_horizontal_material">
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="@dimen/cardview_default_elevation">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_title_org_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/primary_text" />
                <TextView
                    android:id="@+id/text_region_title_org_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/text_title_org_card"
                    android:layout_alignStart="@+id/text_title_org_card"
                    android:layout_below="@+id/text_title_org_card"
                    android:text="Region Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/text_city_title_org_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/text_region_title_org_card"
                    android:layout_alignStart="@+id/text_region_title_org_card"
                    android:layout_below="@+id/text_region_title_org_card"
                    android:text="City Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/text_phone_org_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/text_adress_org_card"
                    android:layout_alignRight="@+id/text_adress_org_card"
                    android:layout_below="@+id/text_city_title_org_card"
                    android:text="Phone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/text_adress_org_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_phone_org_card"
                    android:text="Address"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorPrimary" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_adress_org_card"
                    android:background="@color/icon_layout_background"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_link_org_card"
                        style="@style/menu_icon_style"
                        android:layout_width="24dp"
                        android:layout_height="36dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_link" />

                    <ImageView
                        android:id="@+id/image_map_org_card"
                        style="@style/menu_icon_style"
                        android:layout_width="24dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_map" />

                    <ImageView
                        android:id="@+id/image_phone_org_card"
                        style="@style/menu_icon_style"
                        android:layout_width="24dp"
                        android:layout_height="36dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_phone" />

                    <ImageView
                        android:id="@+id/image_more_org_card"
                        style="@style/menu_icon_style"
                        android:layout_width="8dp"
                        android:layout_height="36dp"
                        android:padding="14dp"
                        android:background="@drawable/ic_background"
                        android:src="@drawable/ic_next" />
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>