<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/abc_button_padding_horizontal_material"
    android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
    android:paddingRight="@dimen/abc_button_padding_horizontal_material">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/text_title_org_card"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_region_title_org_card"
                android:text="Region Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignLeft="@+id/text_title_org_card"
                android:layout_alignStart="@+id/text_title_org_card"
                android:layout_below="@+id/text_title_org_card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_city_title_org_card"
                android:text="City Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignLeft="@+id/text_region_title_org_card"
                android:layout_alignStart="@+id/text_region_title_org_card"
                android:layout_below="@+id/text_region_title_org_card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/text_phone_org_card"
                android:layout_below="@+id/text_city_title_org_card"
                android:layout_alignRight="@+id/text_adress_org_card"
                android:layout_alignEnd="@+id/text_adress_org_card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_adress_org_card"
                android:text="Address"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/text_phone_org_card"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_below="@+id/text_adress_org_card"
                android:background="@color/icon_layout_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_link_org_card"
                    android:src="@drawable/ic_link"
                    style="@style/menu_icon_style"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_map_org_card"
                    android:src="@drawable/ic_map"
                    style="@style/menu_icon_style"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_phone_org_card"
                    android:src="@drawable/ic_phone"
                    style="@style/menu_icon_style"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_more_org_card"
                    android:src="@drawable/ic_next"
                    style="@style/menu_icon_style"
                    android:background="@drawable/ic_background"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
